<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical"
    tools:context=".ConsignmentsHistoryFragment">


    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15.7dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27.7dp"
            android:layout_gravity="center"
            android:text="Dashboard"
            android:layout_marginBottom="10dp"
            android:textColor="#030303"
            android:textSize="31.3sp" />

        <FrameLayout
            android:id="@+id/request_truck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20.7dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/consignmentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


        </FrameLayout>



    </LinearLayout>


</RelativeLayout>